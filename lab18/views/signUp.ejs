<%- include('includes/header.ejs') %>
<h1 class="title">Regístrate</h1>

<form action="/session/signup" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <label for="username">Username:</label>
    <input name="username" id="username" class="input is-rounded" type="text" placeholder="José">
    <br><br>
    <label for="password">Contraseña:</label>
    <input name="password" id="password" class="input is-rounded" type="password">
    <br><br>
    <input class="button is-rounded is-success" type="submit" value="Registrar">
</form>

<%- include('includes/footer.ejs') %>